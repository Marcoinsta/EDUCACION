    <script>
        // Función para mostrar secciones al hacer clic en los enlaces de navegación
        function showSection(sectionId) {
            // Ocultar todas las secciones
            document.querySelectorAll('section').forEach(section => section.style.display = 'none');
            
            // Mostrar la sección activa
            document.getElementById(sectionId).style.display = 'block';
            
            // Agregar la clase 'active' a la sección activa para animaciones
            document.getElementById(sectionId).classList.add('active');
        }

        // Mostrar mensaje de bienvenida después de cargar la página
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('welcome-message').style.display = 'block';
        });

        // Simulación de respuesta del chatbot
        document.getElementById('chatbot-form').addEventListener('submit', function(event) {
            event.preventDefault();
            var userMessage = document.getElementById('user-message').value;
            appendMessage('user', userMessage);
            setTimeout(function() {
                var botMessage = 'Gracias por tu mensaje. En breve te responderemos.';
                appendMessage('bot', botMessage);
            }, 500);
            document.getElementById('user-message').value = '';
        });

        // Función para agregar mensajes al chatbot
        function appendMessage(sender, message) {
            var messageContainer = document.getElementById('chatbot-messages');
            var messageElement = document.createElement('div');
            messageElement.classList.add('message', sender);
            messageElement.textContent = message;
            messageContainer.appendChild(messageElement);
            messageContainer.scrollTop = messageContainer.scrollHeight; // Scroll automático hacia abajo
        }
    </script>
